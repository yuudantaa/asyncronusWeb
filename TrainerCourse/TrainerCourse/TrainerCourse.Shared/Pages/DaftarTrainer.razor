@page "/trainer"
@using TrainerCourse.Shared.Model
@using TrainerCourse.Shared.Services
@inject ITrainerService TrainerService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Daftar Trainer</h4>
        <a href="/tambah-trainer" class="btn btn-primary">
            <i class="bi bi-plus-square"></i> Tambah Trainer
        </a>
    </div>
    <div class="card-body">
        <!-- Search Bar -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Cari trainer berdasarkan nama, email, spesialisasi, alamat, atau telepon..."
                           @bind="searchTerm" @bind:event="oninput" />
                    @if (!string.IsNullOrEmpty(searchTerm))
                    {
                        <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                            <i class="bi bi-x-circle"></i> Clear
                        </button>
                    }
                </div>
                <div class="form-text">
                    Ketik untuk mencari trainer secara real-time...
                </div>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-info fs-6">@trainers.Count trainer ditemukan</span>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Mencari trainer...</p>
            </div>
        }
        else if (!trainers.Any())
        {
            <div class="alert alert-warning text-center">
                <i class="bi bi-search display-4 d-block mb-3"></i>
                <h5>@(string.IsNullOrEmpty(searchTerm) ? "Belum ada trainer" : "Trainer tidak ditemukan")</h5>
                <p class="mb-0">
                    @if (string.IsNullOrEmpty(searchTerm))
                    {
                        <span>Silakan tambahkan trainer pertama Anda.</span>
                    }
                    else
                    {
                        <span>Tidak ada trainer yang cocok dengan "<strong>@searchTerm</strong>"</span>
                    }
                </p>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var trainer in trainers)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm trainer-card">
                            <div class="card-body">
                                <div class="text-center mb-3">
                                    <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center"
                                         style="width: 60px; height: 60px;">
                                        <i class="bi bi-person-fill text-white fs-4"></i>
                                    </div>
                                </div>

                                <a href="@($"detail-trainer/{trainer.TrainerId}")" class="card-title text-primary text-decoration-none text-center d-block">
                                    <h5>@HighlightSearchTerm(trainer.TrainerName)</h5>
                                </a>

                                <h6 class="card-subtitle mb-3 text-muted text-center">
                                    @HighlightSearchTerm(trainer.TrainerSpecialization)
                                </h6>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100" role="group">
                                    <button class="btn btn-outline-primary btn-sm" @onclick="() => EditTrainer(trainer.TrainerId)"
                                            title="Edit trainer">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteTrainer(trainer.TrainerId)"
                                            title="Hapus trainer">
                                        <i class="bi bi-trash"></i> Hapus
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<Trainer> trainers = new();
    private string searchTerm = string.Empty;
    private Timer? searchTimer;
    private bool isLoading = false;
    private CancellationTokenSource? cancellationTokenSource;

    protected override async Task OnInitializedAsync()
    {
        await LoadTrainers();
    }

    private async Task LoadTrainers()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Cancel previous request if any
            cancellationTokenSource?.Cancel();
            cancellationTokenSource = new CancellationTokenSource();

            if (string.IsNullOrWhiteSpace(searchTerm))
            {
                trainers = await TrainerService.GetTrainersAsync();
            }
            else
            {
                trainers = await TrainerService.SearchTrainersAsync(searchTerm);
            }
        }
        catch (OperationCanceledException)
        {
            // Request was cancelled, ignore
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading trainers: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;

        // Debounce search - wait 300ms after user stops typing
        searchTimer?.Dispose();
        searchTimer = new Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadTrainers();
            });
        }, null, 300, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        await LoadTrainers();
    }

    private MarkupString HighlightSearchTerm(string text)
    {
        if (string.IsNullOrEmpty(searchTerm) || string.IsNullOrEmpty(text))
            return (MarkupString)System.Net.WebUtility.HtmlEncode(text);

        var lowerText = text.ToLower();
        var lowerSearchTerm = searchTerm.ToLower();
        var highlightedText = System.Net.WebUtility.HtmlEncode(text);

        if (lowerText.Contains(lowerSearchTerm))
        {
            var startIndex = lowerText.IndexOf(lowerSearchTerm);
            var originalMatch = text.Substring(startIndex, searchTerm.Length);
            var highlightedMatch = $"<mark class='bg-warning'>{System.Net.WebUtility.HtmlEncode(originalMatch)}</mark>";

            highlightedText = System.Net.WebUtility.HtmlEncode(text.Substring(0, startIndex)) +
                            highlightedMatch +
                            System.Net.WebUtility.HtmlEncode(text.Substring(startIndex + searchTerm.Length));
        }

        return (MarkupString)highlightedText;
    }

    private void EditTrainer(int trainerId)
    {
        NavigationManager.NavigateTo($"/edit-trainer/{trainerId}");
    }

    private async Task DeleteTrainer(int trainerId)
    {
        var trainerName = trainers.FirstOrDefault(t => t.TrainerId == trainerId)?.TrainerName ?? "this trainer";
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{trainerName}'?");

        if (confirmed)
        {
            try
            {
                await TrainerService.DeleteTrainerAsync(trainerId);
                // Show success message
                await JSRuntime.InvokeVoidAsync("alert", "Trainer deleted successfully!");
                await LoadTrainers(); // Refresh the list
            }
            catch (HttpRequestException ex) when (ex.Message.Contains("404"))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Trainer not found!");
            }
            catch (HttpRequestException ex) when (ex.Message.Contains("course terkait"))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Cannot delete trainer because they still have associated courses! Please delete or reassign the courses first.");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting trainer: {ex.Message}");
            }
        }
    }

    public void Dispose()
    {
        searchTimer?.Dispose();
        cancellationTokenSource?.Cancel();
        cancellationTokenSource?.Dispose();
    }
}