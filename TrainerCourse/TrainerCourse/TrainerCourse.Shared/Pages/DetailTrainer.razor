@page "/detail-trainer/{id}"
@using TrainerCourse.Shared.Model
@using TrainerCourse.Shared.Services
@inject ITrainerService TrainerService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    @if (trainer == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading trainer details...</p>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">
                    <i class="bi bi-book"></i> Detail Trainer
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="text-primary mb-3">
                            <i class="bi bi-info-circle"></i> Data Trainer
                        </h4>
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th style="width: 40%">ID Trainer</th>
                                    <td>@trainer.TrainerId</td>
                                </tr>
                                <tr>
                                    <th>Nama Trainer</th>
                                    <td>@trainer.TrainerName</td>
                                </tr>
                                <tr>
                                    <th>Spesialisasi Trainer</th>
                                    <td>
                                        <span class="badge bg-info">@trainer.TrainerSpecialization</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Alamat Trainer</th>
                                    <td>@trainer.TrainerAddress</td>
                                </tr>
                                <tr>
                                    <th>No Telepon Trainer</th>
                                    <td>@trainer.TrainerPhone</td>
                                </tr>
                                <tr>
                                    <th>Email Trainer</th>
                                    <td>@trainer.TrainerEmail</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex gap-2 justify-content-end">
                            <button class="btn btn-outline-secondary" @onclick="NavigateToTrainerList">
                                <i class="bi bi-arrow-left"></i> Kembali ke Daftar Trainer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Id { get; set; } = string.Empty;

    private Trainer? trainer;
    private bool isLoading = true;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadTrainerDetail();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadTrainerDetail();
    }

    private async Task LoadTrainerDetail()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            if (int.TryParse(Id, out int trainerId))
            {
                trainer = await TrainerService.GetTrainerByIdAsync(trainerId);
            }
            else
            {
                errorMessage = "ID trainer tidak valid";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading trainer details: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void NavigateToTrainerList()
    {
        NavigationManager.NavigateTo("/trainer");
    }
}